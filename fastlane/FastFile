fastlane_require 'dotenv'

before_all do
  Dotenv.overload('.env')
end

platform :android do
    desc "Weather  Forecast"
    desc "Deploy a new version to Firebase App Distribution"
    lane :firebase_deploy do
    gradle(task: "clean assembleRelease")
    # Ensure FIREBASE_APP_ID is set in your environment variables
    if ENV["FIREBASE_APP_ID"].nil?
      UI.user_error!("FIREBASE_APP_ID environment variable is not set.")
    end
    # Ensure FIREBASE_APP_ID is set in your environment variables
    if ENV["FIREBASE_TOKEN"].nil?
      UI.user_error!("FIREBASE_TOKEN environment variable is not set.")
    end

    firebase_app_distribution(
      app: ENV["APP_ID_FIREBASE"],
      testers: ENV["FIREBASE_TESTERS_GROUPS"],
      groups: "Testers", # Optional: distribute to groups
      firebase_cli_token: ENV["FIREBASE_CLI_TOKEN"],
      release_notes: "Lots of amazing new features to test out!"
    )

    end
  end